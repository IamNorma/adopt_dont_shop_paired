<section class='title'><h2>Enter a new Review:</h2></section>

<section class='form'>
  <%= form_tag "/shelters/#{@shelter_id}" do %>
    <%= label_tag :title %>
    <%= text_field_tag :title %><br>
    <%= label_tag :rating %>
    <%= text_field_tag :rating %><br>
    <%= label_tag :content %>
    <%= text_field_tag :content %><br>
    <%= label_tag :image %>
    <%= text_field_tag :optional_image_link %><br>
    <%= submit_tag "Create Review" %>
  <% end %>
</section>
